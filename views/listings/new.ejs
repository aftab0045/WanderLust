<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br><br>
<body>
    <h3>Create New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data"> 
        <div class="mb-3">
           <label for="title" class="form-lable">Title</label>
           <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required>
           <div class="valid-feedback">Title Looks Good!</div>
        </div>

        <div class="mb-3">
           <label for="description" class="form-label">Description</label>
           <textarea name="listing[description]" id="description" placeholder="Enter Description" class="form-control" required></textarea>
           <div class="invalid-feedback">Please Enter Short Description</div>
        </div>


        <div class="mb-3">
            <label for="image" class="form-lable">Upload Image</label>
             <input name="listing[image]" type="file" class="form-control" required>
        </div>

        <div class="row">
            <div class="mb-3 col-4 mid">
            <label for="title" class="form-lable">Price</label>
            <input name="listing[price]" placeholder="1200" type="number" class="form-control" required>
            <div class="invalid-feedback">Enter Valid Price</div>
            </div>

            <div class="mb-3 col-8 mid">
            <label for="title" class="form-lable">Country</label>
            <input name="listing[country]" placeholder="Pune Maharastra" type="text" class="form-control" required>
            <div class="invalid-feedback">Enter Valid Country</div>
        </div>
        </div>

        
        

        <div class="mb-3">
            <label for="title" class="form-lable">Location</label>
             <input name="listing[location]" placeholder="India" type="text" class="form-control" required>
             <div class="invalid-feedback">Enter Valid Location</div>
        </div>
       
       

        <button class="btn btn-dark add-btn mt-3" >Add</button>
        <br><br>
    </form>
    </div>
</div>